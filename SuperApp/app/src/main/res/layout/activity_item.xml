<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/titleInputLabel"
        android:text="@string/title_input_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:labelFor="@id/titleInput"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <EditText
        android:id="@+id/titleInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/titleInputLabel"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:inputType="text"/>

    <TextView
        android:id="@+id/descriptionInputLabel"
        android:text="@string/description_input_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleInput"
        android:layout_marginTop="16dp"
        android:labelFor="@id/descriptionInput"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <EditText
        android:id="@+id/descriptionInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/descriptionInputLabel"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffc400"
        android:text="@string/save_button_text"
        android:textSize="16sp"/>

</RelativeLayout>
